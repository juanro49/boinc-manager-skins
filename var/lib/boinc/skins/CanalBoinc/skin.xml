<?xml version="1.0" encoding="UTF-8"?>
<skin>
	<en>
		<simple>
			<!-- Color borde marco -->
			<static_line_color>0:100:157</static_line_color>
			<!-- Color resaltado avisos -->
			<notice_alert_color>250:50:50</notice_alert_color>
			<!-- Opacidad semi-fondo (0-255) -->
			<panel_opacity>50</panel_opacity>
			<background_image>
				<!-- Imagen de fondo -->
				<!--	640x500 -->
				<image>
					<imagesrc>imagenes/background_image.jpg</imagesrc>
					<background_color>1:7:50</background_color>
					<anchor_horizontal_center><anchor_horizontal_center>
					<anchor_vertical_bottom></anchor_vertical_bottom>
				</image>
			</background_image>
			<project_image>
				<!-- Imagen a asignar a proyectos sin imagen -->
				<!-- 40x40 -->
				<image>
					<imagesrc>imagenes/project_image.png</imagesrc>
				</image>
			</project_image>
			<workunit_running_image>
				<!-- Imagen tareas activas -->
				<!-- 16x16 -->
        		<image>
          			<imagesrc>imagenes/workunit_running_image.png</imagesrc>
        		</image>
      		</workunit_running_image>
      		<workunit_waiting_image>
      			<!-- Imagen tareas en espera -->
				<!-- 16x16 -->
        		<image>
          			<imagesrc>imagenes/workunit_waiting_image.png</imagesrc>
        		</image>
      		</workunit_waiting_image>
      		<workunit_suspended_image>
      			<!-- Imagen tareas suspendidas -->
				<!-- 16x16 -->
        		<image>
          			<imagesrc>imagenes/workunit_suspended_image.png</imagesrc>
        		</image>
      		</workunit_suspended_image>
		</simple>
		<!-- this section can be omitted in which case it will use the BOINC defaults (shown below) -->
		<advanced>
			<!-- Nombre que se muestra en la barra de título -->
			<application_name>Canal@Boinc - BOINC Manager</application_name>
			<application_icon>
				<image>
					<!-- Icono de la aplicación -->
					<!-- 16x16 -->
					<imagesrc>imagenes/project_image.png</imagesrc>
					<transparency_mask>255:0:255</transparency_mask>
				</image>
			</application_icon>
			<application_icon32>
				<image>
					<!-- Icono de la aplicación -->
					<!-- 32x32 -->
					<imagesrc>imagenes/application32.ico</imagesrc>
					<transparency_mask>255:0:255</transparency_mask>
				</image>
			</application_icon32>
			<!-- Logo Acerca de -->
			<application_logo>imagenes/application_logo.jpg</application_logo>
			<!-- Nombre organización -->
			<organization_name>Canal@Boinc</organization_name>
			<organization_website>http://www.canalboinc.es/</organization_website>
			<organization_help_url>http://www.canalboinc.es/modules/newbb/index.php</organization_help_url>
			<application_short_name>Canal@Boinc</application_short_name>
			<!-- Abrir la última pestaña en vista avanzada -->
			<open_tab>0</open_tab>
			<is_branded>1</is_branded>
		</advanced>
		<!-- this section can be omitted in which case it will use the BOINC defaults (shown below) -->
		<wizards>
			<attach_to_project>
				<!-- Título mostrado en el asistente de añadir proyecto -->
				<title>Canal@Boinc Desktop - Añadir proyecto</title>
			</attach_to_project>
			<attach_to_account_manager>
				<!-- Título mostrado en el asistente de añadir administrador de cuentas -->
				<title>Canal@Boinc Desktop - Añadir administrador de cuentas</title>
				<!-- additional message to user about attaching to an account manager -->
				<account_info_message></account_info_message>
			</attach_to_account_manager>
		</wizards>
	</en>
</skin>
